{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "project": {
        "name": "cv-angular"
    },
    "apps": [
        {
            "root": "src",
            "outDir": "dist",
            "assets": [
                "assets",
                "favicon.ico"
            ],
            "index": "index.html",
            "main": "main.ts",
            "polyfills": "polyfills.ts",
            "test": "test.ts",
            "tsconfig": "tsconfig.app.json",
            "testTsconfig": "tsconfig.spec.json",
            "prefix": "app",
            "styles": [
                "assets/libraries/bootstrap/css/bootstrap.css",
                "assets/libraries/Hover/css/hover.css",
                "assets/libraries/animate.css",
                "assets/libraries/font-awesome/css/font-awesome.css",
                "styles.css"
            ],
            "scripts": [
                "assets/libraries/jquery-3.3.1.min.js",
                "assets/libraries/tether/dist/js/tether.js",
                "assets/libraries/bootstrap/js/bootstrap.js",
                "assets/libraries/typed/lib/typed.js"	
            ],
            "environmentSource": "environments/environment.ts",
            "environments": {
                "dev": "environments/environment.ts",
                "prod": "environments/environment.prod.ts"
            }
        }
    ],
    "e2e": {
        "protractor": {
            "config": "./protractor.conf.js"
        }
    },
    "lint": [
        {
            "project": "src/tsconfig.app.json",
            "exclude": "**/node_modules/**"
        },
        {
            "project": "src/tsconfig.spec.json",
            "exclude": "**/node_modules/**"
        },
        {
            "project": "e2e/tsconfig.e2e.json",
            "exclude": "**/node_modules/**"
        }
    ],
    "test": {
        "karma": {
            "config": "./karma.conf.js"
        }
    },
    "defaults": {
        "styleExt": "css",
        "class": {
            "spec": false
        },
        "component": {}
    }
}
